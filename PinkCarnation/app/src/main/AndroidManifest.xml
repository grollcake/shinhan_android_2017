    package="com.shinhan.pinkcarnation">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity" android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IntroActivity" />
        <activity android:name=".ParentMainActivity" />
        <activity android:name=".ParentSettingActivity" />
        <activity android:name=".ChildSettingActivity" />
        <activity android:name=".ChildMainActivity" />
        <activity android:name=".Intro10Activity" />
        <activity android:name=".Intro21Activity" />
        <activity android:name=".Intro22Activity" />
        <activity android:name=".Intro30Activity" />
    </application>

</manifest>