<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shinhan.pinkcarnation.Intro10Activity"
    android:background="@drawable/bg_settings2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_back"
            android:layout_gravity="center"
            android:onClick="btnBackClicked"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingRight="20dp"
            android:src="@drawable/logo_full"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="#20000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textColor="#ffffff"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:text="기기ID"/>
                <TextView
                    android:id="@+id/txtDeviceid"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/textbox"
                    android:gravity="center_vertical"
                    android:text="1234abcd"/>
                <Button
                    android:id="@+id/btnDeviceidChange"
                    android:onClick="btnDeviceidChangeClicked"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent"
                    android:backgroundTint="#fa9494"
                    android:text="변경" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textColor="#ffffff"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:text="제어코드"/>
                <TextView
                    android:id="@+id/txtAccessCode"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/textbox"
                    android:gravity="center_vertical"
                    android:text="888888"/>
                <Button
                    android:id="@+id/btnVerify"
                    android:onClick="btnDeviceidChangeClicked"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent"
                    android:backgroundTint="#fa9494"
                    android:text="검증" />

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="85"
            android:padding="20dp"
            android:background="#50000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#ffffff"
                        android:backgroundTint="@android:color/holo_orange_light"
                        android:text="항상 실행"/>
                    <Switch
                        android:id="@+id/option01"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="140dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="항상 실행된 상태를 유지합니다"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#ffffff"
                        android:backgroundTint="@android:color/holo_orange_light"
                        android:text="밝기 감지"/>
                    <Switch
                        android:id="@+id/option02"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="140dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="밤에는 밝기를 낮춥니다"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#ffffff"
                        android:backgroundTint="@android:color/holo_orange_light"
                        android:text="소리 알람"/>
                    <Switch
                        android:id="@+id/option03"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="140dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="새 사진이 들어오면 경쾌한 소리를 들려줍니다"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#ffffff"
                        android:backgroundTint="@android:color/holo_orange_light"
                        android:text="최근 사진"/>
                    <Switch
                        android:id="@+id/option04"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>
                <TextView
                    android:layout_marginLeft="140dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="최근 사진을 더 자주 보여줍니다"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#ffffff"
                        android:backgroundTint="@android:color/holo_orange_light"
                        android:text="날씨 및 시간"/>
                    <Switch
                        android:id="@+id/option05"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>
                <TextView
                    android:layout_marginLeft="140dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="시간과 날씨를 표시합니다"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#ffffff"
                        android:backgroundTint="@android:color/holo_orange_light"
                        android:text="화면 전환"/>
                    <Spinner
                        android:id="@+id/option06"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:entries="@array/transitions"/>

                </LinearLayout>
                <TextView
                    android:layout_marginLeft="140dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진 전환효과를 선택하세요"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#ffffff"
                        android:backgroundTint="@android:color/holo_orange_light"
                        android:text="출력 시간"/>
                    <Spinner
                        android:id="@+id/option07"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:entries="@array/showtimes"/>

                </LinearLayout>
                <TextView
                    android:layout_marginLeft="140dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진 하나당 표시할 시간입니다"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:background="#20000000">
            <Button
                android:id="@+id/btnQuery"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:enabled="true"
                android:backgroundTint="#fa9494"
                android:textColor="#ffffff"
                android:text="조회"
                android:onClick="btnQueryClicked"/>
            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:enabled="true"
                android:backgroundTint="#fa9494"
                android:textColor="#ffffff"
                android:text="저장"
                android:onClick="btnSaveClicked"/>
            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:enabled="true"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="#ffffff"
                android:text="초기화"
                android:onClick="btnResetClicked"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
